{
  "name": "cypress-cucumber-allure",
  "version": "1.0.0",
  "description": "Projeto Cypress com Cucumber e Allure",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --spec 'cypress/e2e/features/**/*.feature'",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "test:allure": "npx cypress run --env allure=true", 
    "allure:report": "allure generate allure-results --clean -o allure-report && allure open allure-report"
     "postinstall": "mkdir -p cypress/e2e/features cypress/e2e/step-definitions"
  },
  "keywords": [],
  "author": "Seu Nome",
  "license": "ISC",
  "dependencies": {
    "cypress": "^14.4.0"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^22.0.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "@shelex/cypress-allure-plugin": "^2.41.2"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": "cypress/e2e/step-definitions"
  }

}

